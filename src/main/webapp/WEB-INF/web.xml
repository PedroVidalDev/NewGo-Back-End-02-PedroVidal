<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">

  <display-name>ProjetoServlet</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

  <servlet>
    <servlet-name> cadastrarServlet </servlet-name>
    <servlet-class>com.pedro.domain.servlets.CadastrarServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name> cadastrarServlet </servlet-name>
    <url-pattern> /cadastrar </url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name> consultarServlet </servlet-name>
    <servlet-class>com.pedro.domain.servlets.ConsultarServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name> consultarServlet </servlet-name>
    <url-pattern> /consultar </url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name> excluirServlet </servlet-name>
    <servlet-class>com.pedro.domain.servlets.ExcluirServlet </servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name> excluirServlet </servlet-name>
    <url-pattern> /excluir </url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name> lativoServlet </servlet-name>
    <servlet-class>com.pedro.domain.servlets.LativoServlet </servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name> lativoServlet </servlet-name>
    <url-pattern> /lativoAlterar </url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name> editarServlet </servlet-name>
    <servlet-class>com.pedro.domain.servlets.EditarServlet </servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name> editarServlet </servlet-name>
    <url-pattern> /editar </url-pattern>
  </servlet-mapping>

</web-app>